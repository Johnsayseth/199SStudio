/* Critical CSS - Load First - Prevent FOUC */

:root {
  --primary-color: #123f31;
  --secondary-color: #4ecdc4;
  --text-white: #ffffff;
  --text-muted: rgba(255, 255, 255, 0.8);
  --bg-dark: rgba(0, 0, 0, 0.9);
  --bg-darker: rgba(0, 0, 0, 0.95);
}

/* Force critical styles to load first */
* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
  font-family: "Plus Jakarta Sans", sans-serif;
  background-color: #000;
  color: var(--text-white);
  overflow-x: hidden;
  /* Prevent layout shifts during font loading */
  font-display: swap;
}

/* Prevent layout shifts */
img,
video,
iframe {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Ensure critical elements are visible */
.about-section,
.hero-section,
.about-tabs,
main,
.contact-intro-section {
  display: block;
  visibility: visible;
  opacity: 1;
}

/* Hero Section - Restore original design */
.hero-section {
  position: relative;
  min-height: 100vh;
  /* REMOVED background: #000 to prevent conflict with Vegas.js */
  overflow: hidden;
}

.hero-slides {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-slide-background {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Hero content positioning */
.hero-section .container {
  position: relative;
  z-index: 2;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-section .text-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  max-width: 600px;
  z-index: 800;
}

/* Hero text styles */
.hero-section .small-text {
  color: #ffffff;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 1rem;
}

.hero-section h1 {
  font-family: "Agency FB", Arial, sans-serif;
  font-weight: bold;
  font-size: 79px;
  letter-spacing: 2px;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
  color: #ffffff;
  margin-bottom: 1rem;
}

.hero-section p {
  font-size: 24px;
  font-weight: 600;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  color: #ffffff;
  margin-bottom: 2rem;
}

/* Hero social buttons */
.hero-social-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  padding: 0.5rem 1rem;
  border-radius: 25px;
  text-decoration: none;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.hero-social-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
  color: #ffffff;
  transform: translateY(-2px);
  text-decoration: none;
}

/* Hero buttons container */
.hero-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 2rem;
}

/* Hero primary button */
.hero-buttons .custom-primary-btn {
  background: #123f31;
  border: 2px solid #123f31;
  color: #ffffff;
  font-weight: 600;
  transition: all 0.3s ease;
}

.hero-buttons .custom-primary-btn:hover {
  background: #0f2f26;
  border-color: #0f2f26;
  color: #ffffff;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(18, 63, 49, 0.3);
}

/* Hero secondary button */
.hero-buttons .custom-border-btn {
  background: transparent;
  border: 2px solid #ffffff;
  color: #ffffff;
  font-weight: 600;
  transition: all 0.3s ease;
}

.hero-buttons .custom-border-btn:hover {
  background: #ffffff;
  color: #123f31;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
}

/* About Section - Restore original design */
.about-section {
  background: linear-gradient(
    135deg,
    rgba(0, 0, 0, 0.95),
    rgba(18, 63, 49, 0.1)
  );
  position: relative;
  overflow: hidden;
  padding: 80px 0;
}

.about-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url("/images/hero-bg.jpg") center/cover;
  opacity: 0.05;
  z-index: -1;
}

.about-tabs {
  width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
}

.about-tabs .nav {
  flex-wrap: nowrap;
  min-width: max-content;
  display: flex;
  gap: 0.5rem;
}

.about-tabs .nav-link {
  color: rgba(255, 255, 255, 0.7);
  background: transparent;
  border: none;
  border-radius: 15px;
  padding: 0.75rem 1.5rem;
  margin: 0;
  transition: all 0.3s ease;
  white-space: nowrap;
  flex-shrink: 0;
  min-width: max-content;
}

.about-tabs .nav-link:hover {
  color: #ffffff;
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
}

.about-tabs .nav-link.active {
  color: #fff;
  background: #123f31;
  box-shadow: 0 5px 20px rgba(18, 63, 49, 0.4);
}

/* Tab content */
.tab-content {
  min-height: 400px;
  position: relative;
}

.tab-pane {
  transition: opacity 0.3s ease;
}

/* Section padding */
.section-padding {
  padding: 80px 0;
}

/* Text utilities */
.text-white {
  color: #ffffff;
}

.text-white-50 {
  color: rgba(255, 255, 255, 0.5);
}

/* Focus state for accessibility */
.navbar-nav .nav-link:focus,
.btn:focus,
.form-control:focus {
  outline: 2px solid var(--secondary-color);
  outline-offset: 2px;
}

/* ===== MOBILE RESPONSIVE DESIGN ===== */
/* Mobile First Approach - Fix mobile layout issues */

/* Small devices (landscape phones, 576px and up) */
@media (max-width: 575.98px) {
  /* Hero Section Mobile */
  .hero-section {
    min-height: 100vh;
    padding: 20px 0;
  }

  .hero-section h1 {
    font-size: 48px;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .hero-section p {
    font-size: 18px;
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }

  .hero-section .small-text {
    font-size: 16px;
    margin-bottom: 0.8rem;
  }

  /* Hero social buttons mobile */
  .hero-social-btn {
    padding: 0.4rem 0.8rem;
    font-size: 14px;
    margin: 0 0.3rem;
  }

  /* About Section Mobile */
  .about-section {
    padding: 40px 0;
  }

  .about-tabs {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 0.5rem 0;
  }

  .about-tabs .nav {
    gap: 0.3rem;
    padding: 0 0.5rem;
  }

  .about-tabs .nav-link {
    padding: 0.6rem 1rem;
    font-size: 14px;
    white-space: nowrap;
  }

  /* Contact Section Mobile */
  .contact-intro-section {
    padding: 40px 0;
  }

  .contact-intro-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .contact-intro-section p {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .custom-btn,
  .custom-border-btn {
    padding: 12px 24px;
    font-size: 1rem;
    width: 100%;
    max-width: 300px;
  }
}

/* Medium devices (tablets, 768px and down) */
@media (max-width: 767.98px) {
  /* Hero Section Tablet */
  .hero-section {
    min-height: 80vh;
  }

  .hero-section h1 {
    font-size: 64px;
  }

  .hero-section p {
    font-size: 20px;
  }

  /* About Section Tablet */
  .about-section {
    padding: 60px 0;
  }

  .about-tabs .nav-link {
    padding: 0.7rem 1.2rem;
    font-size: 15px;
  }

  /* Contact Section Tablet */
  .contact-intro-section {
    padding: 60px 0;
  }

  .contact-intro-section h2 {
    font-size: 2.5rem;
  }

  .custom-btn,
  .custom-border-btn {
    padding: 14px 32px;
    font-size: 1.1rem;
  }
}

/* Large devices (desktops, 992px and down) */
@media (max-width: 991.98px) {
  /* Hero Section Desktop */
  .hero-section {
    min-height: 90vh;
  }

  .hero-section h1 {
    font-size: 72px;
  }

  /* About Section Desktop */
  .about-section {
    padding: 70px 0;
  }

  .about-tabs .nav-link {
    padding: 0.8rem 1.5rem;
    font-size: 16px;
  }
}

/* Extra large devices (large desktops, 1200px and down) */
@media (max-width: 1199.98px) {
  .hero-section h1 {
    font-size: 76px;
  }
}

/* Landscape orientation fixes */
@media (max-height: 500px) and (orientation: landscape) {
  .hero-section {
    min-height: 100vh;
    padding: 10px 0;
  }

  .hero-section h1 {
    font-size: 48px;
    margin-bottom: 0.5rem;
  }

  .hero-section p {
    font-size: 18px;
    margin-bottom: 1rem;
  }

  .hero-section .small-text {
    font-size: 14px;
    margin-bottom: 0.5rem;
  }
}

/* High DPI displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .hero-section h1 {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-section p {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
  .hero-social-btn:hover {
    transform: none;
  }

  .about-tabs .nav-link:hover {
    transform: none;
  }

  .custom-btn:hover,
  .custom-border-btn:hover {
    transform: none;
  }
}

/* Print styles */
@media print {
  .hero-section {
    min-height: auto;
    page-break-inside: avoid;
  }

  .about-section {
    page-break-inside: avoid;
  }

  .contact-intro-section {
    page-break-inside: avoid;
  }
}

/* ===== COMPLETELY HIDE HIGH CONTRAST AND ACCESSIBILITY FEATURES ===== */
/* Hide all high contrast and accessibility elements */
[data-high-contrast],
[data-contrast],
[data-accessibility],
.high-contrast,
.contrast,
.accessibility,
.high-accessibility,
.contrast-toggle,
.accessibility-toggle,
[aria-label*="contrast"],
[aria-label*="accessibility"],
[title*="contrast"],
[title*="accessibility"],
[class*="contrast"],
[class*="accessibility"],
[id*="contrast"],
[id*="accessibility"] {
  display: none;
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
  position: absolute;
  left: -9999px;
  top: -9999px;
  z-index: -9999;
  width: 0;
  height: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  margin: 0;
  padding: 0;
  border: 0;
}

/* Hide any contrast-related text */
*:contains("High Contrast"),
*:contains("contrast"),
*:contains("accessibility") {
  display: none;
}

/* Override system preferences */
@media (prefers-contrast: high) {
  * {
    filter: none;
    background: inherit;
    color: inherit;
  }
}

@media (forced-colors: active) {
  * {
    forced-color-adjust: none;
  }
}

/* Force dark theme */
html,
body {
  color-scheme: dark;
  forced-color-adjust: none;
}

/* Block accessibility announcements */
[aria-live],
[aria-atomic],
[aria-relevant] {
  display: none;
}

/* Hide any contrast overlays */
.contrast-overlay,
.accessibility-overlay,
.high-contrast-overlay {
  display: none;
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
}

/* Force specific colors to prevent override - REMOVED !important to prevent conflicts */
:root {
  --bs-body-color: #ffffff;
  --bs-body-bg: #000000;
  --bs-primary: #123f31;
  --bs-secondary: #4ecdc4;
}

/* Ensure no contrast mode can be activated */
body[data-contrast],
html[data-contrast],
body[data-high-contrast],
html[data-high-contrast] {
  --bs-body-color: #ffffff;
  --bs-body-bg: #000000;
}

/* Color Palette Styles */
.color-palette {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.color-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15px;
  padding: 20px;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.color-item:hover {
  transform: translateY(-5px);
  border-color: rgba(78, 205, 196, 0.5);
  background: rgba(255, 255, 255, 0.08);
}

.color-swatch {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 0 auto 15px;
  border: 3px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.color-item:hover .color-swatch {
  transform: scale(1.1);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.color-name {
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8px;
  font-size: 1.1rem;
}

.color-hex {
  font-family: "Courier New", monospace;
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.9rem;
}

/* Comparison Table Styles */
.comparison-table {
  width: 100%;
  border-collapse: collapse;
  margin: 30px 0;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 15px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.comparison-table th,
.comparison-table td {
  padding: 20px;
  text-align: left;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.comparison-table th {
  background: rgba(78, 205, 196, 0.1);
  color: #4ecdc4;
  font-weight: 600;
  font-size: 1.1rem;
}

.comparison-table td {
  color: rgba(255, 255, 255, 0.9);
}

.comparison-table tr:hover {
  background: rgba(255, 255, 255, 0.03);
}

.comparison-table tr:last-child td {
  border-bottom: none;
}

/* Tip Box Styles */
