# CDN Configuration for 199S Studio
# Copy this file to .env.local and fill in your actual values

# Cloudflare CDN Configuration
NEXT_PUBLIC_CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# CDN Feature Flags
NEXT_PUBLIC_CDN_ENABLED=true
NEXT_PUBLIC_CDN_PROVIDER=cloudflare

# Video Quality Settings
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY=720p
NEXT_PUBLIC_MAX_VIDEO_QUALITY=1080p

# CDN Health Check Settings
NEXT_PUBLIC_CDN_HEALTH_CHECK_INTERVAL=30000
NEXT_PUBLIC_CDN_TIMEOUT=10000

# Fallback Settings
NEXT_PUBLIC_CDN_FALLBACK_TO_LOCAL=true
NEXT_PUBLIC_CDN_AUTO_FALLBACK=true

# Analytics Settings (for future use)
NEXT_PUBLIC_VIDEO_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_PROVIDER=none
